{% extends "layout.njk" %}

{% block content %}


<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center / cover"></section>
  <section class="details">
    <h3> Novo(a) Professor(a) </h3>

    <div class="item">
      <div>Avatar</div>
      <div>
        <input type="url" name="avatar_url" placeholder="http://">
      </div>
    </div>
    <div class="item">
      <div>Nome completo</div>
      <div>
        <input type="text" name="name" placeholde="Nome do professor(a)">
      </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div>
        <input type="date" name="birth">
      </div>
    </div>
    
    <fieldset>
      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
          <select>
            <option value="ensino-medio">Ensino Médio Completo</option>
            <option value="ensino-superior" selected>Ensino Superior Completo</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>
          </select>
        </div>
      </div>
    </fieldset>

    <div class="item">
      <div>Tipo de Aula</div>
      <div>
        <span><input type="radio" name="tipoaula" value="presencial" checked> Presencial</span>
        <span><input type="radio" name="tipoaula" value="distancia"> À Distância</span>   
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input type="text" name="services" placeholder="Separe as matérias por vírgula">    
      </div>
    </div>

    <button type="submit">Salvar</button>

  </section>
</form>


{% endblock content %}


