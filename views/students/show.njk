{% extends "layout.njk" %}

{% block content %}


<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
  <section class="details">
    <h3> Aluno(a) </h3>

    <div class="item">
      <div>Avatar</div>
      <div> {{ student.avatar_url }} </div>
    </div>

    <div class="item">
      <div>Nome completo</div>
      <div> {{ student.name }} </div>
    </div>

    <div class="item">
      <div>Email</div>
      <div> {{ student.email }} </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div> {{ student.age }} </div>
    </div>

    <div class="item">
      <div>Ano Escolar</div>
      <div>{{student.yearSchool}}</div>
    </div>

    <div class="item">
      <div>Carga Hor√°ria</div>
      <div>{{student.workload}} hora(s)</div>
    </div>

    <a href="/students/{{student.id}}/edit" class="button"> Editar </a>

  </section>
</form>


{% endblock content %}


