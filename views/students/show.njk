{% extends "layout.njk" %}

{% block content %}


<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center / cover"></section>
  <section class="details">
    <h3> Professor(a) </h3>

    <div class="item">
      <div>Avatar</div>
      <div> {{ teacher.avatar_url }} </div>
    </div>
    <div class="item">
      <div>Nome completo</div>
      <div> {{ teacher.name }} </div>
    </div>

    <div class="item">
      <div>Data de nascimento</div>
      <div> {{ teacher.age }} </div>
    </div>
    
    <fieldset>
      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>{{teacher.graduation}}</div>
      </div>
    </fieldset>

    <div class="item">
      <div>Tipo de Aula</div>
      <div>
        <div>
          <span>{{ teacher.tipoaula }} </span>
        </div>
      </div>
    </div>

    <div class="item">
      <div>Área de atuação</div>
      {% for service in teacher.services %}
        <span>{{ service }}</span>
      {%endfor%}
    </div>

    <div class="item">
      <div>Desde</div>
      <div> {{ teacher.created_at }} </div>
    </div>

    <a href="/teachers/{{teacher.id}}/edit" class="button"> Editar </a>

  </section>
</form>


{% endblock content %}


